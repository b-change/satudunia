              %h3
                %a{:href => "single-review-numbers.html"} Art Deco fashion: the new take
              .post-meta
                .rating-wrapper.small
                  .letter.color2 D-
                .comments
                  %a{:href => "single-review-numbers.html", :title => "Comment on Art Deco fashion: the new take"} 0 comments
                .clearer
            .clearer
        .post-panel-wrapper
          .post-panel
            .post-thumbnail
              %a.darken.small{:href => "single-review-numbers.html"}
                %img{:alt => "fashion3", :height => "70", :src => "http://www.industrialthemes.com/made/wp-content/uploads/2012/06/fashion3-70x70.jpg", :width => "70"}/
            .post-info
              %h3
                %a{:href => "single-review-numbers.html"} 5 Colorful Watches From Zappos for under $50
