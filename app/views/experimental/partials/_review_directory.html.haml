  - get_country_name(@service_providers).first(4).each do |provider|
    - @class = cycle('','right')
    .categorypanels
      .categorypanel{:class => "#{@class}"}
        .vertical
          .category
            .ribbon-shadow-left  
            .icon{:style => "background:url(http://www.industrialthemes.com/made/wp-content/themes/made/images/review-fashion-light.png) no-repeat 0px 0px;"}  
            .catname
              = provider
            .category-arrow  
          %a.darken.video{:href => "single-review-numbers.html"}
            %img{:alt => "fashion4", :height => "170", :src => "http://www.industrialthemes.com/made/wp-content/uploads/2012/06/fashion4-300x170.jpg", :style => "opacity: 1;", :width => "300"}/
          .inner
            %h2
              %a{:href => "single-review-numbers.html"}
              = provider
