              .rating-wrapper.small
                .letter.color4 B+
              .comments
                %a{:href => "single-review-numbers.html", :title => "Comment on Yohji Yamamoto Autumn (Fall) / Winter 2012 men's"} 0 comments
              .more
                %a{:href => "single-review-numbers.html"} More
            %br.clearer/
        .post-panel-wrapper
          .post-panel
            .post-thumbnail
              %a.darken.small{:href => "single-review-numbers.html"} <img width="70" height="70" =alt="fashion2" src="http://www.industrialthemes.com/made/wp-content/uploads/2012/06/fashion2-70x70.jpg">
