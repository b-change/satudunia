.stretched
  #wrapper.clearfix
#sticky-menu.clearfix{style: "display: block; top: 0px;"}
  .container.clearfix
    .sticky-logo
      %a{href: root_path}
        %img{alt: "Beingme", src: "/assets/logo-footer.png", title: "Beingme"}/
    .sticky-search-trigger
      %a{href: "#"}
        %i.icon-search
    .sticky-menu-wrap
      %ul.sf-js-enabled
        %li.sub-menu
          %a{href: concern_about_privacy_experimental_index_path}
            %div
              = "<i class='icon-lock'></i>Concerned about Privacy?".html_safe
            %span Let's Start here

        %li.sub-menu
          %a{href: contact_index_path}
            %div
              ="<i class='icon-phone'></i>Contact Us".html_safe
            %span Out of the Box

        %li.sub-menu
          - if current_user.nil?
            %a{href: "#"}
              %div
                ="<i class='icon-login'></i>Login".html_safe
              %span Our Awesome Works
            %ul.sf-js-enabled{style: "display: none; visibility: hidden;"}
              %li
                %a{href: '/login',:title=>"Email",:alt=>"Email"}
                  %div
                    ="<i class='icon-mail'></i>Via E-Mail".html_safe
              %li
                / %a{href: "portfolio-2-sidebar.html"}
                /   %div 2 Columns w/Sidebar
                = link_to_rpx "<i class='icon-add-to-list'></i>Via Social".html_safe, user_session_url,:html=>{:title=>"with Janrain",:alt=>"with Janrain"}
          - else
            %a{href: "#"}
              %div
                ="<i class='icon-user'></i>Logged in as #{h(current_user.login)}".html_safe
            %ul.sf-js-enabled{style: "display: none; visibility: hidden;"}
              %li
                %a{href: '/profile/settings'}
                  %div
                    ="<i class='icon-lock'></i>Settings".html_safe
              %li
                %a{href: social_connect_path}
                  %div
                    ="<i class='icon-retweet'></i>Connect".html_safe
              %li
                %a{href: follows_user_path(current_user)}
                  %div
                    ="<i class='icon-circled-right'></i>Following".html_safe
              %li
                %a{href: follows_user_path(current_user)+"?sort=followers"}
                  %div
                    ="<i class='icon-right'></i>Followers".html_safe
              %li
                %a{href: destroy_user_session_path}
                  %div
                    ="<i class='icon-logout'></i>SignOut".html_safe
        -if current_user.nil?
          %li.sub-menu
            %a{href: "#"}
              %div
                ="<i class='icon-plus'></i>sign up".html_safe
              %span Inbuilt Templates
            %ul.sf-js-enabled{style: "display: none; visibility: hidden;"}
              %li
                %a{href: social_experimental_index_path(:via=>"email"),:title=>"Email",:alt=>"Email"}
                  %div
                    ="<i class='icon-mail'></i>Via E-Mail".html_safe
              %li
                %a{href: social_experimental_index_path(:via=>"networks"),:title=>"Social",:alt=>"Social"}
                  %div
                    ="<i class='icon-add-to-list'></i>Via Social".html_safe

    / .sticky-search-area
    /   %form#sticky-search{action: "search-results.html", method: "get"}
    /     %input#sticky-search-input{name: "q", placeholder: "Type & Hit Enter", type: "text", value: ""}/
    /   .sticky-search-area-close
    /     %a{href: "#"}
    /       %i.icon-remove

= javascript_include_tag "experimental/upslider.js"
= javascript_include_tag "experimental/upcustom.js"

#myModal.reveal-modal.show-box
