.post-panel
  .post-thumbnail
    %a{:style=>"display:block;"}
      - if news.has_news_image?
        = image_tag news_image_path(news,"small"), :height => 70,:width=>70, :alt => news.slug
      -else
        %img{:alt => "misc3", :height => "70", :src => "http://www.industrialthemes.com/made/wp-content/uploads/2012/06/misc3-70x70.jpg", :style => "opacity: 1;", :width => "70"}/
  .inner
    %h2
      = link_to truncate(strip_tags(news.news_title.capitalize),:length=>64), news_path(news.slug),:class=>"avoid_link_color"
    .category-exp
      By #{news.user.name} on #{news.created_at.strftime("%d %b %Y - %I:%M %p")}
      = truncate(strip_tags(news.news_body), :length => 300)
  .more{:style=>"padding-left:70px;"}
    = link_to "More",news_path(news.slug),:class=>"avoid_link_color"
