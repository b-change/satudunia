:javascript
	jQuery(document).ready(function(jQ){
		jQ('#pagination-digg  a').live('click',function(e){
			e.preventDefault();
			jQuery.ajax({
				url:jQ(this).attr('href'),
				dataType:"script"
			})
		})
	})

	jQuery( document ).ajaxStart(function() {
		jQuery(".section-arrow").addClass("ajax-loader");
	});
	jQuery( document ).ajaxStart(function() {
		jQuery(".section-arrow").removeClass("ajax-loader");
	});
		