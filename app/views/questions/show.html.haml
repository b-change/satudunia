- content_for :title do
  = @question.title

- question_body = find_and_preserve(shapado_auto_link(markdown(@question.body.present? ? @question.body : @question.title)))

= image_tag "plus/body_about1.jpg", :class => "body_header"
.alpha.grid_18.body_about{:id => "firstElement"}
  %span{:class => "p_a"}
    Questions
  %span{:class => "p_a1 i3_1"}
    = link_to "Home", "/"
    >
    %span.underline-decoration-link
      = link_to "#{h truncate(@question.title, :length => 80)}", "/questions/#{@question.slug}",:style => "color: white;"
  .q_height2
    = link_to image_tag("plus/reiting_num1.png"), "#"
    %p{:class => "reiting_num5"}
      456
    = link_to image_tag("plus/reiting_num2.png"), "#", :class => "reiting_num6"
  .grid_14.Fright3
    %span{:class => "s1"}
      = @question.title
    .grid_14.ms_fr
      %span{:class => "s1_q_i"}
        = question_body.html_safe
    %a{:class => "q_i_tag111", :href => "#"}
      = image_tag "plus/q_user_i.jpg"
    
  %ul{:class => "tags2 tags9_1"}
    - @question.tags.each do |tag|
      %li
        = link_to tag, "#", :class => "tags2_1"
  %ul{:class => "tags3 tags9_2"}
    %li
      = link_to "<span class='underline-decoration-link'>Flag</span>".html_safe, new_question_flag_path(@question), :class => "q_tag1 tool-tip",:title=>"Flag this question"
      = link_to "<span class='underline-decoration-link'>Follow</span>".html_safe, follow_question_path(@question), :class => "q_tag2 tool-tip",:title=>"Follow this question"
      = link_to "<span class='underline-decoration-link'>Answer</span>".html_safe, question_path(@question, :anchor => "to_answer"), :class => "q_tag3 tool-tip",:title=>"Answer this question"
  .clear
  .tabs4
    %ul{:class => "tabNavigation"}
      %span{:class => "serv_loc1_1"}
        = "#{@question.answers_count} answers"
      %li
        = link_to "Newest", "#first", :class => "selected"
      %li
        = link_to "Votes", "#second"
      %li
        = link_to "Oldest", "#third"
    .i4_1.serv_loc6{:id => "first"}
      %ul{:id => "slider21", :class => "i3_2"}
        %li{:class => "pager ps1"}
          %ul
            - @question.answers.each do |answer|
              %li
                .q_height
                  = link_to image_tag("plus/reiting_num1.png")
                  %p{:class => "reiting_num3"}
                    = answer.votes_count
                  = link_to image_tag("plus/reiting_num2.png"), "#", :class => "reiting_num4"
                .grid_14.Fright
                  %span{:class => "s1_q_i"}
                    = answer.body
                  %a{:class => "q_i_tag2", :href => "#"}
                    = image_tag "plus/q_user_i.jpg"
                  
                .clear
            %span{:class => "serv_loc1_2", :style => "top:10px"}
              Your Answer
        %p{:style=>"margin-left:30px;"} 
          = text_area_tag :text,nil,:class =>"tinymce answer-field tinyMcetext",:size=>"50x20"
        %p
          = link_to "<span class='underline-decoration-link'>Post your Answer</span>".html_safe, "#", :class => "q_i1_tag1 tool-tip", :title => "Post your Answer"

.grid_6.omega.body1_about.body_qwest1{:id => "secondElement", :style => "width: 242px !important"}
  .clear
  %p{:class => "i3_11"}
    %strong
      Related
  %ul{:class => "tags1"}
    - Question.related_questions(@question).each do |question|
      %li
        = link_to question.title, "/question/#{question.slug}"

:javascript
  $(window).load(function(){

    var tabContainers = $('div.tabs4 > div');
      tabContainers.hide().filter(':first').show();
      
      $('div.tabs4 ul.tabNavigation a').click(function () {
        tabContainers.hide();
        tabContainers.filter(this.hash).show();
        $('div.tabs4 ul.tabNavigation a').removeClass('selected');
        $(this).addClass('selected');
        return false;
      }).filter(':first').click();
  });
  tinyMCE.init({
    theme:"advanced",
    language: "en",
    mode:"textareas",
    theme_advanced_toolbar_location:"top",
    theme_advanced_buttons1: "bold,italic,underline,separator,hyperlink,blockquote,code,image,separator,numlist,bullist,align,charmap,hr,separator,undo,redo",
    theme_advanced_buttons2 :"",
    theme_advanced_buttons3 :"",
    dialog_type :"modal",
    theme_advanced_path :false
  });

