:javascript
	// get ajax data by sort 
	Experimental.getAjaxData(" change","#activity-filter-by","/question_ajax","GET","question_ajax","question_ajax",".loader","","","","search_questions");
	//get ajax data by sort  using pagination
	Experimental.getAjaxData("click","#questions_pagination .pagination-ajax","/question_ajax","GET","question_ajax","question_ajax",".loader","","","yes","#activity-filter-by");
	jQuery(document).ready(function(jQ){
		jQ('#pagination-digg  a').live('click',function(e){
			e.preventDefault();
		})
		
	})

	jQuery(document).ready(function(){
		jQuery('#members_search, #question_under_search').keyup(function(e) {
			var v = jQuery(this).val();
			var ques_search =jQuery.trim(v);
			e.preventDefault();
				jQuery(".loader").addClass("ajax-loader");
				jQuery.ajax({           
					url:'/question_ajax',
				    data:{ type: ques_search,queryData:"queryData",ques:"search_questions",idLoad: "question_ajax",nameOfPartial:"question_ajax",page:""},
						dataType:"script",
						error:function(errorObject){    

					},
					success:function(successObject){
					jQuery(".loader").removeClass("ajax-loader");
					 	
					}
				});
		})
		// get ajax data by sort 
			Experimental.getAjaxData("click ","#members_search_submit, #members_search_submit_below","/question_ajax","GET","question_ajax","question_ajax",".loader","","","","search_questions");
			//get ajax data by sort  using pagination
			Experimental.getAjaxData("click","#questions_pagination .pagination-ajax","/question_ajax","GET","question_ajax","question_ajax",".loader","","","yes","#activity-filter-by");
			jQuery(document).ready(function(jQ){
				jQ('#pagination-digg  a').live('click',function(e){
					e.preventDefault();
				})
			})
		jQuery('#members_search_submit_below').click(function(){
		  jQuery('#question_under_search').val("");
		})	
	});



