#subnav.item-list-tabs.no-ajax{:role => "navigation"}
	%ul
		%li#activity-filter-select.last
			%label{:for => "activity-filter-by"} Show:
			%select#activity-filter-by
				%option{:value => "-1", :id=>"acc-details"} Account Details
				%option{:value => "activity_update", :id=>"acc_settings"} Account Settings
				%option{:value => "new_blog_post", :id=>"email"} Email Settings
		

:javascript
	jQuery('#activity-filter-by').live('change',function(){
		var v = jQuery(this).val();
	
		if (v == -1){
			jQuery("#all_checks").hide();
			jQuery("#password_settings").hide();
			jQuery("#details_page").show();
		}
		if (v == 'activity_update'){
			jQuery("#all_checks").show();
			jQuery("#details_page").hide();
			jQuery("#password_settings").hide();
		}
		if (v == 'new_blog_post'){
			jQuery("#all_checks").hide();
			jQuery("#details_page").hide();
			jQuery("#password_settings").show();
		}
	})