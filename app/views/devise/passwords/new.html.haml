= image_tag "plus/body_about.jpg", :class => "body_header"
.alpha.grid_24.body_about{:id => "firstElement"}
  %span{:class => "p_a"}
    Forgot password
  %span{:class => "p_a1",:style=>"position: relative !important; left: -309px;"}
    = link_to "Home", "/"
    > Forgot password
  %h2
    = t('devise.passwords.link')
  .container-new-plus
    %p
      = t('devise.passwords.send_instructions')
    = form_for resource, :as => resource_name, :url => password_path(resource_name) do |f|
      = f.error_messages
      %strong
        = f.label :email
        .input-style
          = f.text_field :email
      .buttons
        = f.submit t('devise.passwords.send_button'), :class => "ask_tag2_common"
      = render :partial => "shared/devise_links"
