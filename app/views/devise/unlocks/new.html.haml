.clearer.hide-responsive  
%br.hide-responsive/
.main-content-left
  %br.clearer/
  #spotlight-wrapper
    .ribbon-shadow-left  
    .section-wrapper
      / spotlight section header
      .section
        Resend Password Instructions
    .ribbon-shadow-right  
    .section-arrow  
  .page-content.review
    %link{:href => "http://www.industrialthemes.com/made/wp-content/uploads/2012/06/movies3-160x160.jpg", :rel => "image_src"}/
    #register-page.page
      = form_for resource, :as => resource_name, :url => unlock_path(resource_name), :html => {:class => "standard-form", :id=>"unlock_form_new"} do |f|
        .overview-wrapper
          .overview-new
            .left-panel
              .section-width-ext1
                %h2
                  After several attempts to log who are not successful the account is locked for safety, here you can unlock.
              
                = f.error_messages
                #basic-details-section.register-section.padd-bottom1
                  = f.label :email,"Email*"
                  = f.text_field :email, :class=>"input-class-new", :placeholder => "Please Enter Your Registered Email"
          .section-bottom
            = f.submit "Resend unlock instructions", :class=>"label-ext"
            = f.submit "Cancel", :class=>"label-ext"
          = render :partial => "shared/devise_links"
