					url:'/badges?nameOfPartial=badges_list&idLoad=badges_ajax',
					data: { tab: valueTaker},
					dataType:"script",				
					success:function(successObject){
						if(jQuery(this).hasClass('bottom_searchbox')){
							
						}
						jQuery(".loader").removeClass("ajax-loader");
						
					}
				});
			}
		});
	})